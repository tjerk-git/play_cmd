<div class="z-50 mt-10 hidden w-full max-w-sm overflow-hidden bg-white rounded-lg shadow-lg pointer-events-auto ring-1 ring-black ring-opacity-5" data-controller="notification <%= 'confetti' if confetti? %>">
  <div class="p-4">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <%= @icon.html_safe %>
      </div>
      <div class="ml-3 w-0 flex-1 pt-0.5">
        <p class="text-sm font-medium text-gray-900">
          <%= @data[:title] %>
        </p>
        <% if @data[:body].present? %>
          <p class="mt-1 text-sm text-gray-500">
            <%= @data[:body] %>
          </p>
        <% end %>
        <% if @data[:action].present? %>
          <div class="flex mt-3 space-x-7">
            <a <% if @data.dig(:action, :method) == 'get' %> href="<%= @data.dig(:action, :url) %>" <% else %> href="#" data-action="notification#run" <% end %> class="text-sm font-medium text-teal-600 bg-white rounded-md hover:text-teal-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
              <%= @data.dig(:action, :name) %>
            </a>
            <button class="text-sm font-medium text-gray-700 bg-white rounded-md hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500" data-action="notification#close">
              Dismiss
            </button>
          </div>
        <% end %>
      </div>
      <div class="flex flex-shrink-0 ml-4">
        <button class="inline-flex text-gray-400 bg-white rounded-md hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500" data-action="notification#close">
          <span class="sr-only">Close</span>
          <!-- Heroicon name: solid/x -->
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  <% if @data[:countdown] %>
    <div class="w-0 h-1 bg-teal-600 rounded-lg" data-target="notification.countdown"></div>
  <% end %>
</div>
