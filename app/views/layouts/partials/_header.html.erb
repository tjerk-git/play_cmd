<div class="w-full px-10 mx-auto mt-4 md:px-8">
<div class="relative flex flex-shrink-0 h-16 px-0 md:px-8">
    <button class="px-4 text-gray-500 border-r border-gray-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-pink-500 md:hidden" @click="open = true">
        <span class="sr-only">Open</span>
        <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"/>
        </svg>
    </button>
    <div class="flex justify-between flex-1 px-4 md:px-0">
        <div class="flex justify-between flex-1">
            <div class="hidden w-1/3 mt-0 sm:mt-4 md:block">
                <label for="search" class="sr-only">Search for other people or skills!</label>
                <div class="relative text-gray-400 focus-within:text-gray-400">
                    <%= render partial: "search/search_form" %>
                </div>
            </div>
        </div>
        <div class="flex items-center ml-4 md:ml-6">
            <div class="flex px-2 mt-0 sm:mt-4 sm:ml-4">
                <% if !current_page?(:controller => 'posts', :action => 'new') %>
                    <%= link_to "Uploaden", new_post_path, class:'inline-flex invisible lg:visible z-0 items-center py-2 text-sm font-medium text-white border border-none rounded-md shadow-sm px-9 hover:text-gray-200 bg-gradient-to-r from-green-400 to-blue-500 hover:bg-gray-900 focus:outline-none ring-0 sm:ml-3' %>
                <% end %>
            </div>
        </div>
    </div>
</div>
</div>
