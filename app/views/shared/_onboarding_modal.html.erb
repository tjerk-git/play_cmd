<turbo-frame id="onboarding">

<% if current_user && !current_user.onboarding_seen %>
<script>
    window.onload = function () {
        modes.fireworks();
    };
</script>
<div class="fixed inset-0 z-40 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 transition-opacity bg-gray-500 bg-opacity-75" aria-hidden="true"></div>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
    <div class="inline-block px-4 pt-5 pb-4 overflow-hidden text-left align-bottom transition-all transform bg-white rounded-lg shadow-xl sm:my-8 sm:align-middle sm:max-w-xl sm:w-full sm:p-6">
      <div>
        <div class="flex items-center justify-center w-12 h-12 mx-auto bg-green-100 rounded-full">
          <p>ðŸ‘‹</p>
        </div>
        <div class="mt-3 text-center sm:mt-5">
          <h3 class="text-lg font-medium leading-6 text-gray-900" id="modal-title">
            Oh hi <%= current_user.name %>!
          </h3>
          <div class="mt-2">
            <p class="text-sm text-gray-500">
                <div style="width:100%;height:0;padding-bottom:50%;position:relative;"><iframe src="https://giphy.com/embed/Nx0rz3jtxtEre" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div><p><a href="https://giphy.com/gifs/mrw-top-escalator-Nx0rz3jtxtEre"></a></p>
                
                Welcome to the playground of CMD LWD, <br>

                please follow the following instructions:

                <%= image_tag("/onboarding.png") %>

                PS: This is a beta version, if you want to leave feedback or check out our roadmap.
            </p>
            <br>
            <% if is_teacher(current_user) %>
            <p class="text-sm text-gray-500">
              Pssst, you are a teacher?
              That means you can highlight people's work to make them feel extra special!
              Try it out, don't tell anyone you have this power.
              <div style="width:100%;height:0;padding-bottom:100%;position:relative;"><iframe src="https://giphy.com/embed/KqzmDrIW2uzNLR6Dgc" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div><p><a href="https://giphy.com/gifs/KqzmDrIW2uzNLR6Dgc"></a></p>

            </p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="mt-5 sm:mt-6">
        <%= button_to "I'm in", hide_onboarding_path, method: "put", class: 'inline-flex justify-center cursor-pointer w-full px-4 py-2 text-base font-medium text-white bg-gray-600 border border-transparent rounded-md shadow-sm hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 sm:text-sm' %>
      </div>
    </div>
  </div>
</div>
<% end %>
</turbo-frame>
