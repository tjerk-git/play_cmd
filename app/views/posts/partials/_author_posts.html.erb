<section aria-labelledby="latest-posts" class="lg:col-start-3 lg:col-span-1 mt-6">
  <div class="bg-white border px-2 py-3 sm:rounded-lg sm:px-4">
    <h2 id="title" class="text-lg font-medium text-gray-900">More by this author</h2>

    <div class="mt-4 flow-root">
      <ul role="list" class="space-y-1">
        <% @post_by_user.each do |author_post| %>
          <li>
            <div class="relative">
              <div class="relative flex space-x-3">
                <div class="min-w-0 flex-1 flex justify-between space-x-4">
                  <div>
                    <%= link_to post_path(author_post.slug), data: { turbo: false } do %>
                    <p class="text-sm text-gray-500"><%= author_post.title %></p>
                    <% end %>
                  </div>
                  <div class="text-right text-sm whitespace-nowrap text-gray-500">
                    <time datetime="<%= author_post.created_at %>"><%= author_post.created_at.to_date %></time>
                  </div>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>