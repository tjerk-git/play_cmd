<div class="mx-auto md:flex md:items-center md:justify-between">
  <div class="flex items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">
        <%= @post.title %>
      </h1>
      <% if @post.tags.present? %>
        <p class="text-sm font-medium text-gray-500">Tags:
          <% @post.tags.each do |tag| %>
            <a href="#" class="text-gray-900">#<%= tag.name %></a>
          <%end%>
        </p>
      <% end %>
    </div>
  </div>
  <div class="flex flex-col-reverse mt-6 space-y-4 space-y-reverse justify-stretch sm:flex-row-reverse sm:justify-end sm:space-x-reverse sm:space-y-0 sm:space-x-3 md:mt-0 md:flex-row md:space-x-3">
    <% if is_your_post(@post) %>
      <%= render partial: "posts/components/your_post_options", object: @post %>
    <% else %>
      <%= render partial: "posts/components/like_post", object: @post %>
    <% end %>
    <% if is_teacher(current_user) %>
      <%= link_to 'Highlight', highlight_modal_path(@post.slug), data: {turbo: false }, class: 'inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-gray-600 border border-transparent rounded-md shadow-sm hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-gray-500' %>
    <% end %>
  </div>
</div>

<div class="grid grid-cols-1 gap-6 mx-auto mt-8 lg:grid-flow-col-dense lg:grid-cols-3">
  <div class="space-y-6 lg:col-start-1 lg:col-span-2">
    <!-- Post body -->
    <section aria-labelledby="post-content">
      <div class="p-4 bg-white shadow sm:rounded-lg">
        <%= @post.body %>
      </div>
    </section>

    <!-- Feedback-->
    <section aria-labelledby="post-feedback">
      <turbo-frame id="comments">
        <div class="bg-white shadow sm:rounded-lg sm:overflow-hidden">
          <div class="divide-y divide-gray-200">
            <div class="px-4 py-5 sm:px-6">
              <h2 id="post-feedback" class="text-lg font-medium text-gray-900">Feedback</h2>
            </div>
              <% if @post.highlights.count != 0 %>
                <div class="px-4 py-6 bg-yellow-50 sm:px-6">
                  <ul role="list" class="space-y-8">
                    <% @post.highlights.each do |highlight| %>
                    <li>
                      <div class="flex space-x-3">
                        <div class="flex-shrink-0">
                          <% if highlight.user.avatar.attached? %>
                            <%= image_tag highlight.user.avatar.variant(resize_to_limit: [100, 100], format: :jpeg, sampling_factor: "4:2:0", strip: true, interlace: "JPEG", colorspace: "sRGB", quality: 100), class: 'w-10 h-10 rounded-full ' %>
                          <% else %>
                            <img class="w-10 h-10 rounded-full" src="https://ui-avatars.com/api/?name=<%= highlight.user.name %>;color=7F9CF5&amp;background=EBF4FF" alt="USER">
                          <% end %>
                        </div>
                        <div>
                          <div class="text-sm">
                            <%= link_to profile_path(highlight.user.slug) do %>
                              <p class="font-medium text-gray-900"><%= highlight.user.name %> <span class="font-bold">⭐️</span><p>
                            <% end %>
                          </div>
                          <div class="mt-1 text-sm text-gray-700">
                            <p><%= highlight.body %></p>
                          </div>
                          <div class="mt-2 space-x-2 text-sm">
                            <span class="font-medium text-gray-500"><%= highlight.created_at.to_date %></span>
                          </div>
                        </div>
                      </div>
                    </li>
                    <% end %>
                  </ul>
              </div>
            <% end %>
            <% if @post.comments %>
              <div class="px-4 py-6 sm:px-6">
                <ul role="list" class="space-y-8">
                  <% @post.comments.each do |comment| %>
                  <li>
                    <div class="flex space-x-3">
                      <div class="flex-shrink-0">
                        <% if comment.user.avatar.attached? %>
                          <%= image_tag comment.user.avatar.variant(resize_to_limit: [100, 100], format: :jpeg, sampling_factor: "4:2:0", strip: true, interlace: "JPEG", colorspace: "sRGB", quality: 100), class: 'w-10 h-10 rounded-full ' %>
                        <% else %>
                          <img class="w-10 h-10 rounded-full" src="https://ui-avatars.com/api/?name=<%= comment.user.name %>;color=7F9CF5&amp;background=EBF4FF" alt="USER">
                        <% end %>
                      </div>
                      <div>
                        <div class="text-sm">
                          <%= link_to profile_path(comment.user.slug) do %>
                            <p class="font-medium text-gray-900"><%= comment.user.name %><p>
                          <% end %>
                        </div>
                        <div class="mt-1 text-sm text-gray-700">
                          <p><%= comment.body %></p>
                        </div>
                        <div class="mt-2 space-x-2 text-sm">
                          <span class="font-medium text-gray-500"><%= comment.created_at.to_date %></span>
                        </div>
                      </div>
                    </div>
                  </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
          <div class="px-4 py-6 bg-gray-50 sm:px-6">
            <div class="flex space-x-3">
              <div class="flex-shrink-0">
                <% if current_user.avatar.attached? %>
                  <%= image_tag current_user.avatar.variant(resize_to_limit: [100, 100], format: :jpeg, sampling_factor: "4:2:0", strip: true, interlace: "JPEG", colorspace: "sRGB", quality: 100), class: 'w-10 h-10 rounded-full ' %>
                <% else %>
                  <img class="w-10 h-10 rounded-full" src="https://ui-avatars.com/api/?name=<%= current_user.name %>;color=7F9CF5&amp;background=EBF4FF" alt="<%= current_user.name %>">
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <%= form_with model: @comment, url: new_comment_path(@post.id) do |form| %>
                  <div>
                    <label for="comment" class="sr-only">Feedback</label>
                    <%= form.rich_text_area :body,
                      rows: 3,
                      placeholder: 'Watcha thinkin?',
                      data: { controller: "mentions", target: "mentions.field" } ,
                      class: 'block w-full border border-gray-300 rounded-md shadow-sm focus:ring-gray-500 focus:border-gray-500 sm:text-sm'
                    %>
                  </div>
                  <div class="flex items-center justify-between mt-3">
                    <p class="inline-flex items-start space-x-2 text-sm text-gray-500 group hover:text-gray-900">
                      <!-- Heroicon name: solid/question-mark-circle -->
                      <svg class="flex-shrink-0 w-5 h-5 text-gray-400 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                      </svg>
                      <span>
                        Be gentle and stay positive ✌️
                      </span>
                    </p>
                    <%= form.submit 'Send feedback', class: 'inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-gray-600 border border-transparent rounded-md shadow-sm hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 cursor-pointer' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <%# TODO: - Move this somewhere else. %>
        <% if notice == 'comment aangemaakt' %>
          <script>
            modes.fireworks();
          </script>
        <% end %>
      </turbo-frame>
    </section>
  </div>

  <section aria-labelledby="Post details" class="lg:col-start-3 lg:col-span-1">
    <!-- Author details -->
    <div class="flex flex-col gap-5">
      <aside class="bg-white rounded-md" aria-labelledby="author details">
        <div class="h-8 bg-gray-500 rounded-t-md"></div>
        <div class="p-4">
          <header class="relative flex justify-between">
            <% if @post.user.avatar.attached? %>
              <%= image_tag @post.user.avatar.variant(resize_to_limit: [100, 100], format: :jpeg, sampling_factor: "4:2:0", strip: true, interlace: "JPEG", colorspace: "sRGB", quality: 100), class: 'w-10 h-10 rounded-full ring-2 ring-white -mt-7' %>
            <% else %>
              <img class="w-10 h-10 rounded-full ring-2 ring-white -mt-7" src="https://ui-avatars.com/api/?name=<%= @post.user.name %>;color=7F9CF5&amp;background=EBF4FF" alt="USER">
            <% end %>
          </header>
          <div class="mt-2 space-y-2">
            <%= link_to profile_path(@post.user.slug) do %>
              <p><%= @post.user.name %><p>
            <% end %>
            <%# TODO: - Add bio here. for now its just Student or Teacher %>
            <p class="text-sm text-gray-600 break-all">
              <% if is_teacher(@post.user) %>
                Lecturer
              <% else %>
                Student
              <% end %>
            </p>
          </div>
          <dl class="grid grid-cols-2 gap-6 mt-4">
            <div>
              <dt class="text-xs font-medium">Posts</dt>
              <dd><%= @post.user.posts.count() %></dd>
            </div>
            <div>
              <dt class="text-xs font-medium">Replies</dt>
              <dd><%= @post.user.comments.count() %></dd>
            </div>
          </dl>
          <% if @post.user.tags.present? %>
          <div class="mt-3 border-t">
            <div class="pt-2">
              <span class="font-medium">Creative fields</span>
              <div class="flex items-center pt-2 space-x-2 text-sm font-medium">
                <% @post.user.tags.each do |tag| %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-gray-100 text-gray-800">
                  <%= tag.name %>
                </span>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </aside>
    </div>
  </section>
</div>
<%# PAGE STYLING %>
<style>
  trix-toolbar [data-trix-button-group='history-tools'],
  trix-toolbar [data-trix-button-group='block-tools'] {
    display: none;
  }
  [x-cloak] { display: none !important; }
</style>

<%# PAGE SCRIPTS %>
<% if notice == 'Post aangemaakt' %>
  <script>
      window.onload = function () {
          modes.fireworks();
      };
  </script>
<% end %>
