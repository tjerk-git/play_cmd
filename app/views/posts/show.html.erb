<% if notice == 'Post aangemaakt' %>
  <script>
      window.onload = function () {
          modes.fireworks();
      };
  </script>
<% end %>

<style>
trix-toolbar [data-trix-button-group='history-tools'],
trix-toolbar [data-trix-button-group='block-tools'] {
  display: none;
}
</style>

<div>
  <div class="flex justify-between w-full">
    <div class="flex items-center py-2">
      <%# Image %>
      <div class=" text-darkBackground dark:text-gray-400">
        <h3 class="text-xl">
        <%= link_to profile_path(@post.user.slug) do %>
          <%= @post.user.name %>
        <% end %>
        </h3>
        <% if is_teacher(@post.user) %>
          <p>Teacher</p>
        <% else %>
          <p>Student</p>
        <% end %>
      </div>
    </div>
    <div class="self-center">
    <% if is_teacher(current_user) && is_your_field(current_user, @post) %>
       <%= link_to 'Highlight', highlight_modal_path(@post.slug), data: {turbo: false }, class: 'text-gray-700 block px-4 py-2 text-sm' %>
    <% end %>

      <% if current_page?(:action => 'highlight_modal') %>
          <%= render partial: "highlight_form", object: @post %>
      <% end %>

      <%= render partial: "highlights", object: @post %>

      <turbo-frame id="like">
        <div class="flex items-center">
            <div class="inline-flex">
              <% if is_your_post(@post) %>
              <div class="relative inline-block text-left" x-data="{ dropdownOpen: false }">
                <div>
                  <button type="button" @click="dropdownOpen = !dropdownOpen" class="inline-flex justify-center w-full px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500" id="menu-button" aria-expanded="true" aria-haspopup="true">
                    Options
                    <svg class="w-5 h-5 ml-2 -mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </button>
                </div>
                <div
                  x-show="dropdownOpen"
                  x-transition:enter="transition ease-out duration-100"
                  x-transition:enter-start="transform opacity-0 scale-95"
                  x-transition:enter-end="transform opacity-100 scale-100"
                  x-transition:leave="transition ease-in duration-75"
                  x-transition:leave-start="transform opacity-100 scale-100"
                  x-transition:leave-end="transform opacity-0 scale-95"
                  @click.away="dropdownOpen = false"
                  class="absolute right-0 w-56 mt-2 origin-top-right bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
                  role="menu"
                  aria-orientation="vertical"
                  aria-labelledby="menu-button"
                  tabindex="-1"
                >
                  <div class="py-1" role="none">
                    <%= link_to 'Edit post', edit_post_path(@post.slug), data: {turbo: false }, class: 'text-gray-700 block px-4 py-2 text-sm' %>
                    <%= link_to 'Delete post', post_path(@post.slug), method: :delete, data: {turbo: false, confirm: 'Are you sure?'}, class: 'text-gray-700 block px-4 py-2 text-sm' %>
                  </div>
                </div>
              </div>
              <% else %>
              <% if @post.liked?(current_user) %>
                <%= button_to like_path(@post), method: "put", disabled: true, class: 'bg-white text-red-600 rounded-lg inline-flex p-3' do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                <% end %>
              <% else %>
                <%= button_to like_path(@post), method: "put", class: 'bg-white text-gray-800 rounded-lg inline-flex p-3' do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                <% end %>
              <% end %>
              <% end %>
            </div>
            <% if @post.likes.count > 0 %>
              <div class="flex-1 min-w-0">
                <% if is_your_post(@post) %>
                  <%= render partial: "your_likes", object: @post %>
                <% end %>
              </div>
            <% end %>
      </div>
      </turbo-frame>
    </div>
  </div>
  <h1 class="mb-4 text-2xl font-semibold text-black dark:text-white mt-9">
    <%= @post.title %>
  </h1>

  <div class="grid items-start grid-cols-1 gap-4 mb-8 lg:grid-cols-3">
    <div class="grid grid-cols-1 gap-4 lg:col-span-2">
      <div class="w-full bg-white rounded-md dark:bg-darkColor">
        <div class="px-4 py-4 prose">
          <%= @post.body%>
        </div>
      </div>
      <turbo-frame id="comments">
      <section aria-labelledby="notes-title">
            <div class="bg-white shadow sm:rounded-lg sm:overflow-hidden">
              <div class="divide-y divide-gray-200">
                <div class="px-4 py-5 sm:px-6">
                  <h2 id="notes-title" class="text-lg font-medium text-gray-900">Comments</h2>
                </div>
                <div class="px-4 py-6 sm:px-6">
                  <ul role="list" class="space-y-8">
                    <% if @post.comments %>
                    <% @post.comments.each do |comment| %>
                    <li>
                      <div class="flex space-x-3">
                        <div class="flex-shrink-0">
                          <% if comment.user.avatar.attached? %>
                            <%= image_tag comment.user.avatar.variant(resize_to_limit: [100, 100], format: :jpeg, sampling_factor: "4:2:0", strip: true, interlace: "JPEG", colorspace: "sRGB", quality: 100), class: 'w-10 h-10 rounded-full' %>
                          <% end %>
                        </div>
                        <div>
                          <div class="text-sm">
                            <a href="#" class="font-medium text-gray-900"><%= comment.user.name %></a>
                          </div>
                          <div class="mt-1 text-sm text-gray-700">
                            <p><%= comment.body %></p>
                          </div>
                          <div class="mt-2 space-x-2 text-sm">
                            <span class="font-medium text-gray-500"><%= comment.created_at.to_date %></span>
                          </div>
                        </div>
                      </div>
                    </li>
                     <% end %>
                    <% end %>
                  </ul>
                </div>
              </div>
              <div class="px-4 py-6 bg-gray-50 sm:px-6">
                <div class="flex space-x-3">
                  <div class="flex-shrink-0">
                   <% if current_user.avatar.attached? %>
                    <%= image_tag current_user.avatar.variant(resize_to_limit: [100, 100], format: :jpeg, sampling_factor: "4:2:0", strip: true, interlace: "JPEG", colorspace: "sRGB", quality: 100), class: 'w-10 h-10 rounded-full' %>
                  <% end %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <%= form_with model: @comment, url: new_comment_path(@post.id) do |form| %>
                      <div>
                        <label for="comment" class="sr-only">the comment</label>
                        <%= form.rich_text_area :body,
                            rows: 3,
                            placeholder: 'Watcha thinkin?',
                            data: { controller: "mentions", target: "mentions.field" } ,
                            class: 'block w-full border border-gray-300 rounded-md shadow-sm focus:ring-gray-500 focus:border-gray-500 sm:text-sm'
                        %>
                      </div>
                      <div class="flex items-center justify-between mt-3">
                        <p class="inline-flex items-start space-x-2 text-sm text-gray-500 group hover:text-gray-900">
                          <svg class="flex-shrink-0 w-5 h-5 text-gray-400 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                          </svg>
                          <span>
                            Be gentle and stay positive ✌️
                          </span>
                        </p>
                        <%= form.submit nil, class: 'inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-gray-600 border border-transparent rounded-md shadow-sm hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 cursor-pointer' %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </section>
          <% if notice == 'comment aangemaakt' %>
            <script>
              modes.fireworks();
            </script>
          <% end %>
      </turbo-frame>
    </div>
    <div class="flex flex-col w-full gap-4">
        <div class="flex-auto px-4 py-2 bg-white rounded-md dark:bg-darkColor">
          <div class="flex items-center">
            <% if @post.user.avatar.attached? %>
              <%= image_tag @post.user.avatar.variant(resize_to_limit: [100, 100], format: :jpeg, sampling_factor: "4:2:0", strip: true, interlace: "JPEG", colorspace: "sRGB", quality: 100), class: 'inline w-8 h-8 mr-2 rounded-full' %>
            <% end %>
            <div class="">
              <h3 class="text-gray-900 dark:text-gray-200">
              <%= link_to profile_path(@post.user.slug) do %>
                <%= @post.user.name %>
              <% end %>
              </h3>
              <p class="text-sm text-gray-400 dark:text-gray-300"><%= @post.user.email %></p>
            </div>
          </div>
          <% if @post.user.tags.present? %>
            <div class="pt-4">
              <h2 class="mb-2 text-gray-600 dark:text-gray-400">Creative fields</h2>
               <% if @post.tags.present? %>
            <div class="pb-2">
              <% @post.tags.each do |tag| %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium dark:bg-darkBackground bg-gray-100 text-gray-400">
                <%= tag.name %>
                </span>
              <% end %>
            </div>
            <% end %>
            </div>
            </div>
          <% end %>
          <div class="flex-auto px-4 py-2 bg-white rounded-md dark:bg-darkColor">
            <h2 class="mb-2 font-semibold text-gray-900 dark:text-gray-200">Linked tags</h2>
            <% if @post.tags.present? %>
            <div class="pb-2">
              <% @post.tags.each do |tag| %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium dark:bg-darkBackground bg-gray-100 text-gray-400">
                <%= tag.name %>
                </span>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>
  </div>
</div>
