<div class="flex flex-col">
    <h1 class="text-2xl" @click="secretModal++"> <%= @user.name %> </h1>
    <p class="text-gray-600"><%= @user.email %></p>
</div>
<% if !@user.posts.empty? %>
    <div class="mt-5">
        <h2 class="text-lg font-bold">Latest posts</h2>
    </div>
    <div class="grid grid-cols-3 gap-4 mt-4">
      <% @user.posts.sort_by{|t| - t.created_at.to_i}.first(2).each do |post| %>
          <%= render partial: "posts/partials/post_card", locals: { post: post } %>
      <% end %>
    </div>
<% end %>
