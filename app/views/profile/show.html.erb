<div class="flex flex-col">
    <h1 class="text-2xl"> <%= @user.name %> </h1>
    <p class="text-gray-600"><%= @user.email %></p>
</div>
<% if !@user.posts.empty? %>
    <div class="mt-5">
        <h2 class="text-lg font-bold">Latest posts</h2>
    </div>
    <div class="grid grid-cols-3 gap-4 mt-4">
      <% @user.posts.sort_by{|t| - t.created_at.to_i}.first(2).each do |post| %>
        <div class="bg-white rounded-md shadow-md">
          <div>
          <% if post.cover_image.attached? %>
              <%= image_tag post.cover_image.variant(resize_to_limit: [800, 400]).processed, class: 'block w-full h-72 object-cover rounded-t-imd' %>
          <% end %>
          </div>
          <header class="flex p-2 md:p-3">
            <div>
              <h2 class="text-2xl font-bold hover:underline"><%= link_to post.title, post_path(post.slug),  data: { turbo: false } %></h2>
               <div class="flex items-center mt-8">
                <!-- <img
                  alt="<%= post.user.name %>"
                  class="inline w-8 h-8 mr-2 rounded-full"
                /> -->
                <p
                  class="ml-1 font-semibold text-gray-900 text-md dark:text-gray-300"
                >
                  <%= post.user.name %>
                </p>
              </div>
            </div>
          </header>
          <% if post.tags.present? %>
            <div class="bottom-0 flex justify-between pb-4 space-x-8 md:px-4">
              <div class="flex space-x-2">
                <% post.tags.each do |tag| %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-gray-100 text-gray-400">
                  <%= link_to tag.name, "/posts/list/#{tag.slug}" %>
                </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
<% if @user.avatar.attached? %>
<%= image_tag @user.avatar.variant(resize_to_limit: [100, 100], format: :jpeg, sampling_factor: "4:2:0", strip: true, interlace: "JPEG", colorspace: "sRGB", quality: 100) %>
<% end %>
