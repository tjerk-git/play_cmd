<%# TAG SELECTOR %>
<% content_for :tag_selector do %>
  <section id="heading" class="px-4 mx-auto bg-gray-100 shadow-inner dark:bg-mine-shaft-500 sm:px-6 lg:px-8">
    <div class="py-3 mx-auto sm:flex sm:items-center">
      <h3 class="text-xs font-semibold tracking-wide text-gray-500 uppercase dark:text-gray-300">
        Communities
      </h3>
      <div aria-hidden="true" class="hidden w-px h-5 bg-gray-300 sm:block sm:ml-4"></div>

      <div class="mt-2 sm:mt-0 sm:ml-4">
        <div class="flex flex-wrap items-center -m-1">
          <% current_user.tags.each do |tag| %>
            <%= link_to tag_path(tag.slug) do %>
              <span class="m-1 inline-block rounded-full border border-gray-200 items-center py-1.5 pl-3 pr-3 text-sm font-medium bg-white dark:border-tundora-500 dark:bg-tundora-500 dark:text-gray-300 text-gray-900">
                <span><%= tag.name %></span>
                <%# This is for a badge
                  <span class="absolute top-0 right-0 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-red-100 transform translate-x-1/2 -translate-y-1/2 bg-red-600 rounded-full">2</span>
                %>
              </span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
<% end %>

<div class="flex justify-between w-full flex-gap">
  <h1 class="text-2xl">All users</h1>
</div>

<% if !@users.empty? %>

  <div class="grid grid-cols-1 gap-4 mt-4 md:grid-cols-3">
    <% @users.each do |user| %>
      <%= render 'profile/partials/user_card', user: user %>
    <% end %>
  </div>
  <%= will_paginate @users %>
<% else %>
    <h1> 404 did not found... </h1>
<% end %>
