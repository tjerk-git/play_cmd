<div class="pb-5 border-b border-gray-200 sm:pb-0">
  <h3 class="text-lg leading-6 text-gray-900">
    <span class="font-bold"><%= @tag.name %></span> <%= title %>
  </h3>
  <div class="mt-3 sm:mt-4">
    <div class="sm:hidden">
      <label for="current-tab" class="sr-only">Select a tab</label>
      <select id="current-tab" name="current-tab" class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
        <option>Posts</option>

        <option>Highlighted</option>

        <option selected>Members</option>
      </select>
    </div>

    <div class="hidden sm:block">
      <nav class="-mb-px flex space-x-8">
        <%= link_to 'Posts', tag_path(@tag.slug), class: current_page?(tag_path) ? 'border-gray-900 text-gray-900 whitespace-nowrap pb-4 px-1 border-b-2 font-medium text-sm' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap pb-4 px-1 border-b-2 font-medium text-sm' %>
        <%= link_to 'Highlighted', tag_highlighted_path(@tag.slug), class: current_page?(tag_highlighted_path) ? 'border-gray-900 text-gray-900 whitespace-nowrap pb-4 px-1 border-b-2 font-medium text-sm' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap pb-4 px-1 border-b-2 font-medium text-sm' %>
        <%= link_to 'Members', tag_members_path(@tag.slug), class: current_page?(tag_members_path) ? 'border-gray-900 text-gray-900 whitespace-nowrap pb-4 px-1 border-b-2 font-medium text-sm' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap pb-4 px-1 border-b-2 font-medium text-sm' %>
      </nav>
    </div>
  </div>
</div>